---
import { Image } from "astro:assets";

import { css } from "~/style/pandacss/css";

import { type ImageWithContainerProps } from "./type";

export type Props = ImageWithContainerProps;

const {
  aspectRatio,
  objectFit,
  containerHeight,
  containerWidth,
  cssProps,
  ...props
} = Astro.props as Props;
---

<div
  class={css({
    width: containerWidth,
    height: containerHeight,
    aspectRatio: aspectRatio,
    ...(cssProps ?? {}),
  })}
>
  <!-- @ts-ignore -->
  <Image
    {...props}
    class={css({
      width: "100%",
      height: "100%",
      objectFit: objectFit,
    })}
  />
</div>
