---
import Favicon from "@/layouts/meta/Favicon.astro";
import Pandas from "./Pandas.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <title>{title}</title>
    <meta charset="utf-8" slot="metas" />
    <Favicon />
    <slot name="metas" />
  </head>
  <body>
    <slot />
    <Pandas />
  </body>
</html>
