---
import Favicon from "./meta/Favicon.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <title>{title}</title>
    <meta charset="utf-8" slot="metas" />
    <Favicon />
    <slot name="meta" />
  </head>
  <body>
    <slot />
    <style is:global>
      @layer reset, base, tokens, recipes, utilities;
    </style>
  </body>
</html>
