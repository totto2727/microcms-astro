---
import type { Blog } from "microcms/query/blogs";

import BaseLayout from "../../../layout/BaseLayout.astro";

export type Props = {
  blog: Pick<
    Blog,
    "title" | "content" | "updatedAt" | "publishedAt" | "eyecatch"
  >;
};

const props = Astro.props.blog;
---

<BaseLayout title={props.title}>
  <div set:html={props.content} />
</BaseLayout>
