{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", ".env.local"],
  "pipeline": {
    "prebuild": {
      "dependsOn": ["^prebuild"],
      "outputs": ["src/style/pandacss/**", ".astro/**"]
    },
    "build": {
      "dependsOn": ["^build", "prebuild"],
      "outputs": ["dist/**", "server/**"]
    },
    "start": {
      "dependsOn": ["build"]
    },
    "dev": {
      "dependsOn": ["prebuild", "^dev"]
    },
    "test": {
      "dependsOn": ["prebuild"],
      "outputs": ["./node_modules/.cache/vitest/**"]
    },
    "type": {
      "dependsOn": ["prebuild"],
      "outputs": ["./node_modules/.cache/.ts-cache/**"]
    },
    "check": {
      "dependsOn": ["type"],
      "outputs": [
        "./node_modules/.cache/eslint/.eslint-cache",
        "./node_modules/.cache/prettier/.prettier-cache"
      ]
    },
    "fix": {
      "dependsOn": ["type"],
      "outputs": [
        "./node_modules/.cache/eslint/.eslint-cache",
        "./node_modules/.cache/prettier/.prettier-cache"
      ]
    }
  }
}
