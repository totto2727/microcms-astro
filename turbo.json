{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "./prettier.config.cjs",
    "./eslint.config.js",
    ".env",
    ".env.local"
  ],
  "pipeline": {
    "prebuild": {
      "dependsOn": [
        "^build"
      ]
    },
    "build": {
      "dependsOn": [
        "prebuild"
      ],
      "outputs": [
        "dist/**",
        "./node_modules/pandacss/**"
      ]
    },
    "dev": {
      "dependsOn": [
        "^dev"
      ]
    },
    "check": {},
    "lint": {
      "outputs": [
        "./node_modules/.cache/eslint/.eslint-cache"
      ]
    },
    "format": {
      "outputs": [
        "./node_modules/.cache/prettier/.prettier-cache"
      ]
    },
    "static-analysis": {
      "dependsOn": [
        "check",
        "lint",
        "format"
      ]
    }
  }
}